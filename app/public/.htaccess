<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteBase /

    # Evita reescrever arquivos e diret√≥rios reais
    RewriteCond %{REQUEST_FILENAME} -f [OR]
    RewriteCond %{REQUEST_FILENAME} -d
    RewriteRule ^ - [L]

    # Redireciona tudo para index.php
    RewriteRule ^ index.php [QSA,L]
</IfModule>
